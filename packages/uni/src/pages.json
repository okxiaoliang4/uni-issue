{
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "uni-app"
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "easycom": {
        "autoscan": true,
        "custom": {
            "^pa-(.*)": "@params/components/$1/index.vue", // 匹配node_modules内的vue文件
            "^van-(.*)": "@params/uni-vant/$1/index.vue", // 匹配node_modules内的vue文件
            // "mp-html": "mp-html/dist/uni-app/components/mp-html/mp-html.vue" // 富文本
        }
    }
}